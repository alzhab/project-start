mixin head(text)
  <!DOCTYPE html>
  html(lang="en")
    head
      meta(charset="UTF-8")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      title= text ? text.title : 'Document' 
      if text
        each link in text.links
          link(rel="stylesheet", href=link)
    body
      block